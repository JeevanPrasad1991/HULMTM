<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/storename_header"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ff9933"
        android:padding="5dp">

        <TextView
            android:id="@+id/storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/storename_remembermetext"
            android:layout_alignBottom="@+id/storename_remembermetext"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/storename_checkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/storename_remembermetext"
            android:layout_alignBottom="@+id/storename_remembermetext"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="54dp"
        android:text="Image Allowed"
        android:textSize="19sp"
        android:visibility="invisible" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkout_image"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/checkout_image"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/checkout_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/spinner1"
        android:layout_marginTop="55dp"
        android:background="#ff9933"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:text="Save"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/checkout_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/storename_header"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="55dp"
        android:layout_toRightOf="@+id/textView1"
        android:background="@drawable/camera_ico" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/checkout_image"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/checkout_image"
        android:layout_marginLeft="16dp"
        android:gravity="center_horizontal"
        android:text="Take Checkout Image"
        android:textSize="30sp" />

</RelativeLayout>
