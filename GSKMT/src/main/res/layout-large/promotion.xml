<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
   
    android:orientation="vertical"
    android:weightSum="10"
     >

    <!-- Include Header Bar -->
    
    


        <TextView
              android:id="@+id/posm"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ff9933"
            android:textColor="#ffffff"
           	android:text="Promo Compliance"
            android:textSize="30sp" />
        
        
      
    
    

    <LinearLayout
        android:id="@+id/pepsicolistview_chartcontentarea1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_weight=".2"
        android:visibility="invisible"
         android:background="#ff9933"
        android:weightSum="10" >

            <TextView
                android:id="@+id/pepsicolistview_1c_titletexta"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                
                android:gravity="center_vertical"
                
                android:text="  Name"
                android:textColor="#ffffff"
                
                android:textSize="14sp"
                 android:background="#ff9933"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/pepsicolistview_1c_tolitletexta"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
             android:gravity="center"
                android:text="Quantity"
               
                android:textColor="#ffffff"
                 android:background="#ff9933"
                android:textSize="14sp"
                android:textStyle="normal" />
   
            <TextView
                android:id="@+id/pepsicolistview_1c_titletextaaa"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                
                android:layout_height="match_parent"
                 android:background="#ff9933"
     			 android:gravity="center"
                android:text=" Picture"
                android:textColor="#ffffff"
                android:textSize="14sp"
             
                android:textStyle="normal" />
        
    </LinearLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_weight="7.66"
        android:cacheColorHint="#00000000"
        android:choiceMode="none"
        android:divider="#ff9933"
        android:layout_marginBottom="30dp"
        android:dividerHeight="2dp" >
    </ListView>

    <Button
        android:id="@+id/save"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginRight="5sp"
        android:layout_weight=".8"
        android:background="#ff9933"
       
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="20sp" />

</LinearLayout>