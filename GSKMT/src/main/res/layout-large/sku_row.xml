<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:orientation="vertical" 
    android:weightSum="100">
    
      <TextView
            android:id="@+id/brand"
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            android:text="Horlicks"
            android:textSize="20sp"
            android:textColor="#000000" />

    <LinearLayout
    android:id="@+id/mainpage_header"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:layout_weight="8"
 
    android:weightSum="10"
     >

        <TextView
            android:id="@+id/mainpage_rememberme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:layout_weight="5"
            android:text=""
            
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
             android:gravity="center"
            android:hint="stock"
            android:text="5"
            android:textSize="20sp"
            android:inputType="number" >

        </EditText>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
             android:gravity="center"
            android:hint="faceup"
            android:text="4"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
            android:textSize="20sp"
            android:inputType="number" />

   </LinearLayout>
   
    
    <LinearLayout

    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
  	android:visibility="gone"
    android:layout_weight="8"
 
    android:weightSum="10"
     >

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:paddingLeft="5dp"
            android:text="Packed"
            android:textColor="#f26d20"
            android:visibility="invisible"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:layout_weight="5"
            android:text=""
            
            android:textSize="20sp" />

        <EditText

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
             android:gravity="center"
             android:visibility="gone"
            android:hint="stock"
            android:inputType="number" >

        </EditText>

        <EditText
            android:id="@+id/fdfd"
            android:layout_width="0dp"
             android:gravity="center"
            android:hint="faceup"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
            android:inputType="number" />

   </LinearLayout>
    
    <LinearLayout
    android:id="@+id/mainpage_header2"
    android:layout_width="fill_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:layout_weight="8"
 	android:visibility="gone"
    android:weightSum="15"
     >

        <EditText
            android:id="@+id/last_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:visibility="invisible"
            android:textSize="12sp"
             android:gravity="left"
            android:hint="last 6 months"
            android:inputType="number" >

        </EditText>

        <EditText
            android:id="@+id/last_two"
            android:layout_width="0dp"
             android:textSize="12sp"
             android:gravity="left"
            android:hint="last 1 year"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:visibility="invisible"
            android:inputType="number" />
        
         <EditText
            android:id="@+id/last_three"
            android:layout_width="0dp"
             android:gravity="left"
            android:hint="more than year"
            android:layout_height="wrap_content"
            android:layout_weight="5"
             android:textSize="12sp"
            android:ems="3"
            android:visibility="invisible"
            android:inputType="number" />
        

   </LinearLayout>
    
    
    
</LinearLayout>