<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="5"
        android:text="Horlicks"
        android:textColor="#000000"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mainpage_rememberme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:padding="@dimen/padding_10dp"
            android:paddingLeft="5dp"
            android:text="Jeevan "
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainpage_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:weightSum="10">
        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_weight="5"
            android:gravity="center"
            android:hint="stock"
            android:inputType="number"
            android:maxLength="3"
            android:text="10">
        </EditText>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:layout_weight="5"
            android:gravity="center"
            android:hint="faceup"
            android:inputType="number"
            android:maxLength="3"
            android:text="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="10">
        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:paddingLeft="5dp"
            android:text="PKD"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:hint="stock"
            android:inputType="number"
            android:visibility="gone">
        </EditText>

        <EditText
            android:id="@+id/fdfd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:hint="faceup"
            android:inputType="number"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainpage_header2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:weightSum="15">

        <EditText
            android:id="@+id/last_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left"
            android:hint="last 6 months"
            android:inputType="number"
            android:maxLength="3"
            android:text="5"
            android:textSize="20sp">

        </EditText>

        <EditText
            android:id="@+id/last_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left"
            android:hint="last 1 year"
            android:inputType="number"
            android:maxLength="3"
            android:text="3"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/last_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="left"
            android:hint="more than year"
            android:inputType="number"
            android:maxLength="3"
            android:text="2"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>