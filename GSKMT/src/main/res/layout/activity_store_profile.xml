<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/grey_background">

    <TextView
        android:id="@+id/txt_store_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="10"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:padding="@dimen/custom_margin"
        android:text="Store Profile"
        android:textColor="#ffffff"
        android:textSize="@dimen/fortxtsize20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="82"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/padding_10dp"
            app:cardElevation="@dimen/margin2dp"
            android:layout_margin="@dimen/margin2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/custom_margin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/selectionTextStyle"
                        android:text="Store Id"/>
                    <EditText
                        android:id="@+id/edt_storeId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="2213"
                        android:padding="@dimen/appbar_padding_top"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/selectionTextStyle"
                        android:text="Store Name"/>

                    <EditText
                        android:id="@+id/edt_store_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rouded_corner"
                        android:hint="Store Name"
                        android:padding="@dimen/appbar_padding_top"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="normal"
                        android:inputType="text"
                        android:maxLength="150"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/selectionTextStyle"
                        android:text="Address"/>

                    <EditText
                        android:id="@+id/edt_store_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rouded_corner"
                        android:hint="Address"
                        android:padding="@dimen/appbar_padding_top"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="normal"
                        android:inputType="text"
                        android:maxLength="150"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/selectionTextStyle"
                        android:text="Locality"/>

                    <EditText
                        android:id="@+id/edt_store_locality"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rouded_corner"
                        android:hint="Locality"
                        android:padding="@dimen/appbar_padding_top"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="normal"
                        android:inputType="text"
                        android:maxLength="150"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/selectionTextStyle"
                        android:text="Pincode"/>

                    <EditText
                        android:id="@+id/edt_store_pincode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rouded_corner"
                        android:hint="Pincode"
                        android:padding="@dimen/appbar_padding_top"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="normal"
                        android:inputType="number"
                        android:maxLength="6"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/selectionTextStyle"
                        android:text="City"/>
                    <EditText
                        android:id="@+id/edt_city"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="City"
                        android:padding="@dimen/appbar_padding_top"
                        android:textSize="@dimen/textsize14"
                        android:textStyle="bold"
                        android:focusable="false"
                        android:background="@android:color/transparent"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/save"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/custom_margin"
        android:layout_weight="8"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Save"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</LinearLayout>