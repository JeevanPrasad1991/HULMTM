<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:id="@+id/brand"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="5"
        android:text="Horlicks"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/mainpage_header"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"

        android:weightSum="10">

        <TextView
            android:id="@+id/mainpage_rememberme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingLeft="5dp"
            android:text=""

            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
            android:gravity="center"
            android:hint="stock"
            android:inputType="number"
            android:text="5">

        </EditText>

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
            android:gravity="center"
            android:hint="faceup"
            android:inputType="number"
            android:text="4" />

    </LinearLayout>


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:visibility="gone"

        android:weightSum="10">

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:paddingLeft="5dp"
            android:text="Packed"
            android:textColor="#f26d20"
            android:textSize="14sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/fdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:paddingLeft="5dp"
            android:text=""

            android:textSize="20sp" />

        <EditText

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
            android:gravity="center"
            android:hint="stock"
            android:inputType="number"
            android:visibility="gone">

        </EditText>

        <EditText
            android:id="@+id/fdfd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:ems="3"
            android:gravity="center"
            android:hint="faceup"
            android:inputType="number"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainpage_header2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@drawable/list_selector"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="15">

        <EditText
            android:id="@+id/last_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:gravity="left"
            android:hint="last 6 months"
            android:inputType="number"
            android:textSize="12sp"
            android:visibility="invisible">

        </EditText>

        <EditText
            android:id="@+id/last_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:gravity="left"
            android:hint="last 1 year"
            android:inputType="number"
            android:textSize="12sp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/last_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="3"
            android:gravity="left"
            android:hint="more than year"
            android:inputType="number"
            android:textSize="12sp"
            android:visibility="invisible" />


    </LinearLayout>


</LinearLayout>