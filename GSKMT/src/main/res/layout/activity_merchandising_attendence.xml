<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/uperL"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#EB9100"
        android:paddingBottom="5sp"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingTop="5sp">

        <TextView
            android:id="@+id/geotag_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text=" Attendence "
            android:textColor="#000"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutsup_u"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uperL"
        android:layout_margin="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/txtsize_16sp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="Merchandiser Attendence "
            android:textColor="#f26d20"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/supAtten_spinner"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="@dimen/padding_10dp"
            android:layout_marginTop="5dp" />


        <ImageView
            android:id="@+id/imgcam"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_10dp"
            android:layout_marginTop="36dp"
            android:visibility="gone"
            android:background="@drawable/camera_ico"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/attendenc_BTN"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Save"
            android:textColor="@color/white" />
    </LinearLayout>


</RelativeLayout>
